@using Authority.Infrastructure.MyCourse;
@model Role
@{
    var role = Model;
}
<section class="wrapper">
    <div class="text-center">
        <h1 class="display-4">角色明细信息页面</h1>
    </div>
    <div class="col-lg-12 text-center">
        <section class="panel">
            <header class="panel-heading">
                角色信息
            </header>
            <div class="panel-body">
                <div class="form">
                    <form id="formSearch" class="form-validate form-horizontal" method="get" action='@Url.Action("UpdateRole","Role")' novalidate="novalidate">
                        <div class="form-group ">
                            <label for="rid" class="control-label col-lg-2">角色Id <span class="required">*</span></label>
                            <div class="col-lg-10">
                                <input class="form-control" value="@role.Rid" minlength="5" type="text" required=""/>
                                <input id="rid" value="@role.Rid" name="rid" type="hidden" />
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="rname" class="control-label col-lg-2">角色名称<span class="required">*</span></label>
                            <div class="col-lg-10">
                                <input class="form-control" id="rname" name="rname" value="@role.Rname" type="text" required="">
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="rdesc" class="control-label col-lg-2">角色描述<span class="required">*</span></label>
                            <div class="col-lg-10">
                                <input class="form-control " id="rdesc" value="@role.Rdesc" type="text" name="rdesc" required="">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-primary" type="submit" onclick="change()">Save</button>
                                <button class="btn btn-default" type="button" onclick="">Cancel</button>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </section>
    </div>
</section>
<script type="text/javascript">
        @*function change(uid) {
            var url =@Url.Action("Detail", "User")+'?uid=' + uid;
            location.href = url;
        }*@
        function change() {
            var form = document.getElementById("formSearch");
            form.submit();
        }
</script>