@using Authority.Infrastructure.MyCourse;
@model Role
@{
    var role = Model;
}
@{ 
    var authors = ViewData["Authors"] as List<Author>;
    var allslist = ViewData["AllaList"] as List<Author>;
}
<section class="wrapper">
    <!--分配权限点-->
    <div class="col-lg-12 text-center">
        <section class="panel">
            <header class="panel-heading">
                分配权限点
            </header>
            <div class="panel-body">
                <div class="form">
                    <form id="formSearch" class="form-validate form-horizontal" method="get" novalidate="novalidate">
                        <div class="form-group">
                            <label class="control-label col-lg-4" for="inputSuccess">您已选择的角色：</label>
                            <div class="box-content">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>角色ID</th>
                                            <th>角色名称</th>
                                            <th>角色描述</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td></td>
                                            <td>
                                                <input class="form-control" value="@role.Rid" minlength="5" required="" disabled />
                                            </td>
                                            <td>
                                                <input class="form-control" id="rname" name="rname" value="@role.Rname" required="" disabled>
                                            </td>
                                            <td>
                                                <input class="form-control " id="rdesc" value="@role.Rdesc" name="rdesc" required="" disabled>
                                            </td>
                                        </tr>
                                    </tbody>

                                </table>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="form">
                    <form id="formSearch" class="form-validate form-horizontal col-sm-12" method="get" action="@Url.Action()" novalidate="novalidate">
                        <div class="col-sm-6">
                            <section class="panel">
                                <header class="panel-heading">
                                    已有权限点
                                </header>
                                <div class="panel-body">
                                    <div class="btn-row">
                                        @for (int i = 0; i < authors.Count; i++)
                                        {
                                            <label class="btn btn-primary" name="aid" id="@authors[i].Aid">
                                                @authors[i].Aname
                                            </label>
                                            <label>&nbsp;</label>
                                        }
                                    </div>
                                </div>
                            </section>
                        </div>
                        <div class="col-sm-6">
                            <div class="panel">
                                <header class="panel-heading">
                                    所有权限点
                                </header>
                                <div class="panel-body">
                                    <div class="btn-row">
                                        @for (int i = 0; i < allslist.Count; i++)
                                        {
                                            <label class="btn btn-primary " name="aid" id="@allslist[i].Aid">
                                                @allslist[i].Aname
                                            </label>
                                            <label>&nbsp;</label>
                                        }
                                     </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="clearfix"></div>
                    <div class="row">
                        <div class="col-sm-offset-2 col-sm-8">
                            <button type="submit" class="btn btn-danger">确定</button>
                            <button type="submit" class="btn btn-danger" id="cancel">返回</button>
                        </div>
                    </div>
                </div>

            </div>
        </section>

    </div>

</section>
