    <div class="col-lg-12 text-center">
        <section class="panel">
            <header class="panel-heading">
                分配权限点
            </header>
            <div class="panel-body">
                <div class="form">
                    <form id="formSearch" class="form-validate form-horizontal" method="get" action='@Url.Action("Apoint","Role")' novalidate="novalidate">
                        <div class="form-group ">
                            <label for="rid" class="control-label col-lg-2">角色Id <span class="required">*</span></label>
                            <div class="col-lg-10">
                                <input class="form-control" value="@role.Rid" minlength="5" type="text" required="" disabled />
                                <input id="rid" value="@role.Rid" name="rid" type="hidden" />
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="rname" class="control-label col-lg-2">角色名称<span class="required">*</span></label>
                            <div class="col-lg-10">
                                <input class="form-control" id="rname" name="rname" value="@role.Rname" type="text" required="" disabled>
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="rdesc" class="control-label col-lg-2">角色描述<span class="required">*</span></label>
                            <div class="col-lg-10">
                                <input class="form-control " id="rdesc" value="@role.Rdesc" type="text" name="rdesc" required="" disabled>
                            </div>
                        </div>


