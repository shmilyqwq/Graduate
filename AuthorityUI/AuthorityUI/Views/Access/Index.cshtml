                    char[i].checked = sda;
                }
        }
        function toshow(aid)
        {
            if (confirm("确认要删除？")) {
                window.location.href = '/Access/DeleteAccess?aid=' + aid;                    
            }       
        }
        function entersearch() {

            var event = window.event || arguments.callee.caller.arguments[0];
            if (event != null && event.code == "Enter") {
                var form = document.getElementById("formSearch");
                form.submit();
            }
